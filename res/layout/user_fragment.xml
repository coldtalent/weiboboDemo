<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/headMain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_basic"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_basic" >

        <Button
            android:id="@+id/moveTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_basic"
            android:padding="@dimen/padding_basic"
            android:background="@color/Silver"
            android:text="@string/moveTo" />

        <Button
            android:id="@+id/foucsOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_basic"
            android:background="@color/Silver"
            android:text="@string/foucsOn" />
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.example.weibotest.view.TextListView
            android:id="@+id/userList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>